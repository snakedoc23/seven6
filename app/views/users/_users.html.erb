<% i = 0 %>
<% if params[:page] %>
			<% i = i + ((params[:page].to_i - 1) * 20) %>
			<% end %>
<% @users.each do |user| %>
	<tr>
		<td><%= i += 1 %></td>
		<td class="title"><%= link_to user.username, user_path(user) %></td>
		<td><%= user_avatar user, "20x20" %></td>
		<td class="place"><%= user.place %></td>
		<td class="created_at"><%= user.total_routes %></td>
		<% if user.total_distance %>
			<td><%= user.total_distance %> km</td>
		<% else %>
			<td>0 km</td>
		<% end %>
		<td class="created_at"><%= time_ago_in_words(user.created_at) %></td>

	<% if current_user %>
	<% if current_user.admin? %>
		<td><%= link_to "UsuÅ„", user, :method => :delete, :confirm => "Czy aby na pewno", :title => "UsuÅ„ #{user.username}" %></td>
	<% end %>
	<% end %>
	</tr>
<% end %>
