<%if @likes.empty? %>
<div id="without-map">
	<%= form_tag routes_path, :method => 'get', :id => "search-route" do %>
		<%= text_field_tag :search, params[:search], :placeholder => "Szukaj trasę", :id => "search-text" %>
		<%= submit_tag "Search", :id => "search-btn", :name => nil %>
	<% end %>
	<h2 class="clear">Ulubione trasy: <%= link_to @user.username, user_path(@user) %></h2>
	<div id="content">
		<div class="empty">
			<p>Nie masz ulubionch tras...</p>
			<%= link_to "Wszystkie trasy", routes_path %>
		</div>

<% else %>
<div id="without-map">
	<%= form_tag routes_user_path(@user), :method => 'get', :id => "search-route" do %>
		<%= text_field_tag :search, params[:search], :placeholder => "Szukaj trasę", :id => "search-text" %>
		<%= submit_tag "Search", :id => "search-btn", :name => nil %>
	<% end %>

	<h2 class="clear">Ulubione trasy: <%= link_to @user.username, user_path(@user) %></h2>
	<div id="content">
<%= render 'routes' %>

<% end %>
		<%= link_to raw("&larr; Powrót"), user_path(@user), :id => "backto_user", :class => "btn-base" %>
	</div> <!-- END content -->
</div> <!-- END without-map -->