<%= render 'shared/without_map' %>
		<div class="users-index-table">
		<table class="users-index big-table">
			<thead>
				<tr>
					<th></th>
					<th>Nazwa</th>
					<th>Avatar</th>
					<th>Miejscowość</th>
					<th>Dodane trasy</th>
					<th>Kilometry</th>
				<% if current_user %>	
					<% if current_user.admin? %>
						<th>Usuń użytkownika</th>
					<% end %>
				<% end %>
				</tr>
			</thead>
			<tbody>
			<% i = 0 %>
			<% @users.each do |user| %>
				<tr>
					<td><%= i += 1 %></td>
					<td><%= link_to user.username, user_path(user) %></td>
					<td><%= user_avatar user, "20x20" %></td>
					<td><%= user.place %></td>
					<td><%= i * 13 %></td>
					<td><%= i * 89 %></td>
				<% if current_user %>
				<% if current_user.admin? %>
					<td><%= link_to "Usuń", user, :method => :delete, :confirm => "Czy aby na pewno", :title => "Usuń #{user.username}" %></td>
				<% end %>
				<% end %>
				</tr>
			<% end %>
			</tbody>
		</table>
		
		<%= will_paginate %>
		
		</div> <!-- END users-index-table -->

	</div> <!-- END content -->
</div> <!-- END without-map -->


