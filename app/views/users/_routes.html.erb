<div id="without-map">
	<%= form_tag routes_user_path(@user), :method => 'get', :id => "search-route" do %>
		<%= text_field_tag :search, params[:search], :placeholder => "Szukaj trasÄ™", :id => "search-text" %>
		<%= submit_tag "Search", :id => "search-btn", :name => nil %>
	<% end %>

	<h2 class="h2-top clear"><%= @title_header_top %></h2>
	<div class="h2-bg">
		<h2><%= link_to @user.username, user_path(@user) %></h2>	
	</div>
	<div id="content">
		<div class="routes-index-table">
			<%# render 'routes/routes' %>
		<table class="routes-index big-table">
			<thead>
				<tr>
					<th></th>
					<th><%= sortable 'Nazwa', 'title' %></th>
					<th><%= sortable 'Dystans', 'distance' %></th>
					<th><%= sortable 'Wzniesienia', 'altitude' %></th>
					<th><%= sortable 'Nawierzchnia', 'surface' %></th>
					<th><%= sortable 'Ocena', 'rating' %></th>
					<th><%= sortable 'Data dodania', 'created_at' %></th>
					<th><%= sortable 'Przejazdy', 'total_workouts' %></th>
					<th class="like"><span><%= sortable '', 'total_likes' %></span></th>
					<th class="comments"><span><%= sortable '', 'total_comments' %></span></th>
				</tr>
			</thead>
			<tbody>
			<% i = 0 %>
			<% if params[:page] %>
			<% i = i + ((params[:page].to_i - 1) * 10) %>
			<% end %>
			<% @routes.each do |route| %>
				<tr>
					<td><%= i += 1 %></td>
					<td class="title"><%= link_to route.title, route_path(route) %></td>
					<td class="distance"><%= route.distance %> km</td>
					<td class="altitude"><%= route.altitude %> m</td>
					<td class="surface"><%= route.surface%></td>
					<td class="rating">
						
						<ul class="rating <%= route.id %>">
							<li class="val"><%= route.rating %></li>
							<li class="1">1</li>
							<li class="2">2</li>
							<li class="3">3</li>
							<li class="4">4</li>
							<li class="5">5</li>
						</ul>
					</td>
					
					<td class="created_at"><%= l route.created_at, :format => "%y.%m.%d %H:%I" %></td>
					<td class="workouts"><%= route.total_workouts || 0 %></td>
					<td class="like"><%= route.show_total_likes %></td>
					<td class="comments"><%= route.show_total_comments %></td>
				</tr>
			<% end %>
			</tbody>
		</table>
		</div> <!-- END routes-index-table -->

