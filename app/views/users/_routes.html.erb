<div id="without-map">
	<%= form_tag routes_path, :method => 'get', :id => "search-route" do %>
		<%= text_field_tag :search, params[:search], :placeholder => "Szukaj trasę", :id => "search-text" %>
		<%= submit_tag "Search", :id => "search-btn", :name => nil %>
	<% end %>

	<h2 class="h2-top clear"><%= @title_header_top %></h2>
	<div class="h2-bg">
		<h2><%= link_to @user.username, user_path(@user) %></h2>	
	</div>
	<div id="content">
		<div class="routes-index-table">
			<%# render 'routes/routes' %>

					<table class="routes-index big-table">
			<thead>
				<tr>
					<th></th>
					<th>Nazwa</th>
					<th>Dystans</th>
					<th>Wzniesienia</th>
					<th>Nawierzchnia</th>
					<th>Ocena</th>
					<th>Czas jazdy</th>
					<th>Średnia</th>
					<th>Data dodania</th>
					<th>Użytkownik</th>
					<th class="like"><span></span></th>
					<th class="comments"><span></span></th>
				</tr>
			</thead>
			<tbody>
			<% i = 0 %>
			<% if params[:page] %>
			<% i = i + ((params[:page].to_i - 1) * 10) %>
			<% end %>
			<% @routes.each do |route| %>
				<tr>
					<td><%= i += 1 %></td>
					<td class="title"><%= link_to route.title, route_path(route) %></td>
					<td class="distance"><%= route.distance %> km</td>
					<td class="altitude"><%= route.altitude %> m</td>
					<td class="surface"><%= route.surface%></td>
					<td class="rating">
						
						<ul class="rating <%= route.id %>">
							<li class="val"><%= route.avg_rating %></li>
							<li class="1">1</li>
							<li class="2">2</li>
							<li class="3">3</li>
							<li class="4">4</li>
							<li class="5">5</li>
						</ul>
					</td>
					<td class="time"><%= route.time_to_string %></td>
					<% if route.avg_speed %>
					<td class="avg_speed"><%= route.avg_speed %> km/h</td>
					<% else %>
					<td></td>
					<% end %>
					<td class="created_at"><%= l route.created_at, :format => "%m.%d %H:%I" %></td>
					<td class="user"><%= link_to route.user.username, user_path(route.user) %></td>
					<td class="like"><%= Rating.route_likes(route.id).size %></td>
					<td class="comments"><%= Comment.route_comments(route.id).size %></td>
				</tr>
			<% end %>
			</tbody>
		</table>

		</div> <!-- END routes-index-table -->

