<div id="without-map">
	<%= form_tag routes_path, :method => 'get', :id => "search-route" do %>
		<%= hidden_field_tag :direction, params[:direction] %>
		<%= hidden_field_tag :sort, params[:sort] %>
		<%= text_field_tag :search, params[:search], :placeholder => "Szukaj trasÄ™", :id => "search-text" %>
		<%= submit_tag "Search", :id => "search-btn", :name => nil %>
	<% end %>

	<h2 class="h2-top clear"><%= @title_header_top %></h2>
	<div class="h2-bg">
		<h2><%= @title_header %></h2>	
	</div>
	<div id="content">

		<div class="routes-index-table">
			<%= render 'routes' %>
		</div> <!-- END routes-index-table -->

	</div> <!-- END content -->
</div> <!-- END without-map -->