<div id="without-map">
	<%= form_tag routes_path, :method => 'get', :id => "search-route" do %>
		<%= hidden_field_tag :direction, params[:direction] %>
		<%= hidden_field_tag :sort, params[:sort] %>
		<%= hidden_field_tag :distance_min, params[:distance_min] %>
		<%= hidden_field_tag :distance_max, params[:distance_max] %>
		<%= hidden_field_tag :altitude_min, params[:altitude_min] %>
		<%= hidden_field_tag :altitude_max, params[:altitude_max] %>
		<%= hidden_field_tag :road, params[:road] %>
		<%= text_field_tag :search, params[:search], :placeholder => "Szukaj trasę", :id => "search-text" %>
		<%= submit_tag "Search", :id => "search-btn", :name => nil %>
	<% end %>
	<h2 class="clear">Wszystkie trasy</h2>
	<div id="content">
		<div id="filters">
			<div id="distance_filter" class="filter_div">
				<h4>Długość trasy</h4>
				<div class="filter_label">
					<span class="min">0</span>
					<span class="max">100+</span>
				</div>
				<div id="distance_slider" class="slider"></div>
				<div id="distance_range"></div>
			</div>
			<div id="altitude_filter" class="filter_div">
				<h4>Różnica wysokości</h4>
				<div class="filter_label">
					<span class="min">0</span>
					<span class="max">400+</span>
				</div>
				<div id="altitude_slider" class="slider"></div>
				<div id="altitude_range"></div>
			</div>
			<div id="road_filter" class="filter_div">
				<%= label(:route, 'road', 'Tylko asfalt') %>
				<%= check_box(:route, 'road') %>
			</div>

			<%= link_to 'Filtruj', params.merge(:distance_min => 0, :distance_max => 100, :altitude_min => 0, :altitude_max => 100, :page => nil), :id => 'routes_filter_btn', :class => 'btn-base' %>
			<%= link_to 'Reset', '#', :id => 'routes_filter_reset' %>
		</div>

		<div class="routes-index-table">
			<%= render 'routes' %>
		</div> <!-- END routes-index-table -->

	</div> <!-- END content -->
</div> <!-- END without-map -->