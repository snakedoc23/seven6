<%= render 'shared/with_map' %>
	
	
	<div id="route-show">
		<h3><%= @route.title %></h3>

		<ul class="route-show">
				<li>
					<div class="th">Ocena:</div>
					<div class="td"><%= image_tag "/images/temp-stars.png" %></div>
				</li>
				<li>
					<div class="th">Dystans:</div>
					<div class="td"><%= @route.distance %> km</div>
				</li>
				<li>
					<div class="th">Nawierzchnia:</div>
					<div class="td"><%= @route.surface%></div>
				</li>
				<li>
					<div class="th">Przewy≈ºszenia:</div>
					<div class="td"><%= @route.distance %> m</div>
				</li>
				<li>
