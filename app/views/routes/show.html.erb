<div id="with-map">
	<div id="aside">
		<div id="aside-content">
			<%= render 'shared/search_place' %>
			<h2 class="title-aside clear">Trasa</h2>
			<div id="route-show">
				<%= render 'route_show' %>
			</div><!-- /route-show -->
			<div class="clear"></div>
			<% if current_user == @route.user %>
				<%= link_to "Edytuj", edit_route_path(@route), :id => "edit-route-btn" %>
				<%= link_to "Usuń", @route, :method => :delete, :confirm => "Czy aby na pewno", :id => "remove-route-btn" %>
			<% end %>
			<%= link_to (image_tag "chart-icon.png"), "#", :id => "show-elevation" %>
			<div class="route-show-options">
				<%# link_to "Komentarze (#{Comment.route_comments(@route.id).size})", "#", :id => "show-comments", :class => "btn-base" %>
				<% if current_user %>
				<div id="add-favorite">
					<%= link_to "Dodaj", "#", :title => "Dodaj do ulubionych" %>
					<span>Dodaj do ulubionych</span>
				</div>
				<div id="add-photo">
					<%= link_to 'Dodaj zdjęcie', '#', :title => "Dodaj zdjęcie" %>
					<span>Dodaj zdjęcie</span>
				</div>
				<% end %>
			</div>
			<div id="route_actions">
				<%= link_to "Komentarze (#{@route.total_comments || 0 })", "#", :id => "show-comments" %>
				<%= link_to "Przejazdy (#{@route.workouts.count})", "#", :id => 'show-workouts' %>
				<% if @route.climbs_string %>
					<%= link_to "Podjazdy (#{@route.climbs.count})", "#", :id => "show-climbs" %>
				<% else %>
					<%= link_to "Podjazdy (0)", "#", :id => "show-climbs" %>
				<% end %>
			</div>
			<div id="comments-container" class="clear">
				<%= render 'comments' %>
			</div><!-- /comments-container -->
			<div id="climbs-container">
				<%= render 'climbs' %>
			</div><!-- /climbs-container -->
			<div id="workouts-container">
				<%= render 'workouts' %>
			</div><!-- /climbs-container -->
		</div><!-- aside-content -->
	</div><!-- aside -->
	<div id="map"></div>
</div>