<table class="routes-index big-table">
	<thead>
		<tr>
			<th></th>
			<th><%= sortable 'Nazwa', 'title' %></th>
			<th><%= sortable 'Dystans', 'distance' %></th>
			<th><%= sortable 'Wzniesienia', 'max_altitude' %></th>
			<th><%= sortable 'Nawierzchnia', 'surface' %></th>
			<th><%= sortable 'Ocena', 'rating' %></th>
			<th><%= sortable 'Data dodania', 'created_at' %></th>
			<th><%= sortable 'UÅ¼ytkownik', 'user_id' %></th>
			<th><%= sortable 'Przejazdy', 'total_workouts' %></th>
			<th class="like"><span></span></th>
			<th class="comments"><span></span></th>
		</tr>
	</thead>
	<tbody>
	<% i = 0 %>
	<% if params[:page] %>
		<% i = i + ((params[:page].to_i - 1) * 10) %>
	<% end %>
	<% @routes.each do |route| %>
		<tr>
			<td><%= i += 1 %></td>
			<td class="title"><%= link_to route.title, route_path(route) %></td>
			<td class="distance"><%= route.distance %> km</td>
			<td class="altitude"><%= route.altitude %> m</td>
			<td class="surface"><%= route.surface%></td>
			<td class="rating">
				<ul class="rating <%= route.id %>">
					<li class="val"><%= route.avg_rating %></li>
					<li class="1">1</li>
					<li class="2">2</li>
					<li class="3">3</li>
					<li class="4">4</li>
					<li class="5">5</li>
				</ul>
			</td>

			<td class="created_at"><%= time_ago_in_words(route.created_at) %></td>
			<td class="user"><%= link_to route.user.username, user_path(route.user) %></td>
			<td class="workouts"><%= route.total_workouts %></td>
			<td class="like"><%= Rating.route_likes(route.id).size %></td>
			<td class="comments"><%= Comment.route_comments(route.id).size %></td>
		</tr>
	<% end %>
	</tbody>
</table>
<%= will_paginate %>