		
	<ul>
	<% @routes.each do |route| %>
		<li><div class="route" id="route-home-<%= route.id %>">
			<div class="route-img">	
			<% if route.static_map_url.nil? %>
				<% route.save_static_map %>
				<%= image_tag(route.static_map_url, :alt => route.title ) %>
			<% else %>
				<%= image_tag(route.static_map_url, :alt => route.title ) %>
			<% end %>
			</div>
			<div class="route-info">
				<h4><%= link_to truncate(route.title, :length => 50), route_path(route.id) %></h4>
				<ul>
					<div class="profile-image <%= profile_image route %>"></div>
					<li><%= route.distance %> km, <%= route.surface %>, <%= route.altitude %> m </li>
					<li>Doda≈Ç <%= link_to route.user.username, user_path(route.user) %>, <%= time_ago_in_words(route.created_at) %> temu</li>
					
				</ul>
				<ul class="comment-likes">
					<li><span class="comment-icon"></span><%= route.comments.size %></li>
					<li><span class="like-icon"></span><%= Rating.route_likes(route.id).size %></li>
				</ul>
			</div>
		</div></li>
	<% end %>
	</ul>
